{% extends 'base.html.twig' %}

{% block title %}Accueil - WorkTogether Data Solutions{% endblock %}

{% block body %}
    <div class="container mt-5">
        <header class="text-center mb-4">
            <img src="{{ asset('images/WorkTogether_bear_logo.webp') }}" alt="WorkTogether Data Solutions Bear" class="img-fluid mb-3 rounded-circle" style="max-width: 200px; height: 200px;">
            <h1 class="text-primary">WorkTogether Data Solutions</h1>
            <p class="lead">Solutions avancées pour la location de serveurs</p>
        </header>

        <section class="mb-5">
            <h2 class="text-secondary">Nos offres commerciales</h2>
            <div class="row">
                {% for offer in offers %}
                    <div class="col-md-3">
                        <div class="card border-primary mb-3">
                            <div class="card-header bg-primary text-white">{{ offer.name }}</div>
                            <div class="card-body">
                                <h5 class="card-title">{{ offer.unitLimit }} unités</h5>
                                <p class="card-text">{{ offer.price|number_format(2, ',', ' ') }} €/mois</p>
                                <a href="{{ path('offer_show', { 'id': offer.id }) }}" class="btn btn-primary">Voir l'offre</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>Aucune offre disponible.</p>
                {% endfor %}
            </div>
        </section>

        <section class="text-center mb-5">
            <h2 class="text-secondary">Pourquoi choisir WorkTogether Data Solutions ?</h2>
            <p>Des infrastructures de pointe, une sécurité renforcée et une flexibilité adaptée à vos besoins.</p>
            <a href="#" class="btn btn-outline-primary">En savoir plus</a>
        </section>

        <div class="mb-5"></div>
    </div>
{% endblock %}
