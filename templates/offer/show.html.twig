{% extends 'base.html.twig' %}

{% block title %}Offre - {{ offer.name }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <header class="text-center mb-4">
            <h1 class="text-primary">{{ offer.name }}</h1>
        </header>

        <section>
            <h2>Description</h2>
            <p>{{ offer.description }}</p>

            <h3 class="mt-3">Prix</h3>
            <p><strong>{{ offer.price|number_format(2, ',', ' ') }} €</strong></p>
        </section>

        <a href="{{ path('offer_index') }}" class="btn btn-primary mt-4">Retour à la liste des offres</a>
    </div>
{% endblock %}
